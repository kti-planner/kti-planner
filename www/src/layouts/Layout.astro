---
interface Props {
    title: string;
    description?: string | null | undefined;
}

const { title, description = null } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>
            {title}
        </title>
        {description !== null ? <meta name="description" content={description} /> : null}
    </head>
    <body>
        <slot />
    </body>
</html>
