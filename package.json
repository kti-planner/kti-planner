{
  "name": "kti-planner",
  "private": true,
  "version": "0.1.0",
  "description": "Dedicated CMS system for planning the workload of KTI laboratories.",
  "type": "module",
  "main": "build/main.js",
  "scripts": {
    "build": "npm run build-www && npm run build-src",
    "build-src": "rm -rf ./build && mkdir ./build && tsc",
    "build-www": "astro check --root ./www --minimumSeverity warning && vue-tsc --project ./www && astro build --root ./www",
    "lint": "eslint .",
    "prettier": "prettier src/ www/src/ --write",
    "test": "npm run test-integration && npm run test-e2e",
    "test-integration": "vitest run",
    "test-e2e": "playwright test",
    "dev": "astro dev --root ./www"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kti-planner/kti-planner.git"
  },
  "author": "Adam Bucior, Mikołaj Trzciński, Igor Stadnicki",
  "bugs": {
    "url": "https://github.com/kti-planner/kti-planner/issues"
  },
  "homepage": "https://github.com/kti-planner/kti-planner#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "canvas": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ioredis": "^5.8.2",
    "on-headers": "^1.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/node": "^9.5.0",
    "@astrojs/vue": "^5.1.2",
    "@eslint/js": "^9.22.0",
    "@fullcalendar/bootstrap5": "^6.1.19",
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/list": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@fullcalendar/vue3": "^6.1.19",
    "@playwright/test": "^1.56.1",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bootstrap": "^5.2.10",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.5",
    "@types/markdown-it": "^14.1.2",
    "@types/on-headers": "^1.0.4",
    "@types/pg": "^8.15.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.26",
    "@vueuse/core": "^13.9.0",
    "astro": "^5.15.2",
    "dompurify": "^3.3.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.4.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^10.5.1",
    "ics": "^3.8.1",
    "markdown-it": "^14.1.0",
    "playwright": "^1.52.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "sass": "^1.93.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.21",
    "vue-tsc": "^3.1.2",
    "zod": "^4.1.12"
  }
}
